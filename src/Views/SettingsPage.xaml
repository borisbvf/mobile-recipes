<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Recipes.Views.SettingsPage"
			 xmlns:models="clr-namespace:Recipes.Models"
			 xmlns:viewmodels="clr-namespace:Recipes.ViewModels"
			 x:DataType="viewmodels:SettingsViewModel"
             Title="{Binding LocalizationManager[Settings], Mode=OneWay}">
	<VerticalStackLayout>
		<Frame
			HeightRequest="70"
			Margin="2"
			Padding="2">
			<Grid
				ColumnDefinitions="*,*"
				Margin="5"
				Padding="5">
				<Label
					VerticalOptions="Center"
					HorizontalOptions="Start"
					FontSize="Medium"
					Text="{Binding LocalizationManager[Theme],Mode=OneWay}"/>
				<Picker
					Grid.Column="1"
					VerticalOptions="Center"
					HorizontalOptions="End"
					FontSize="Medium"
					ItemsSource="{Binding Themes}"
					ItemDisplayBinding="{Binding DisplayName}"
					SelectedItem="{Binding SelectedTheme}"/>
			</Grid>
		</Frame>
		<Frame
			HeightRequest="70"
			Margin="2"
			Padding="2">
			<Grid
				ColumnDefinitions="*,*"
				Margin="5"
				Padding="5">
				<Label
					VerticalOptions="Center"
					HorizontalOptions="Start"
					FontSize="Medium"
					Text="{Binding LocalizationManager[Language],Mode=OneWay}"/>
				<Picker
					Grid.Column="1"
					VerticalOptions="Center"
					HorizontalOptions="End"
					FontSize="Medium"
					ItemsSource="{Binding Languages}"
					ItemDisplayBinding="{Binding .}"
					SelectedItem="{Binding SelectedLanguage}"/>
			</Grid>
		</Frame>
    </VerticalStackLayout>
</ContentPage>